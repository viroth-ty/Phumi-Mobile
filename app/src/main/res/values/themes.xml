<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pumi" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/jade</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">#80FFFFFF</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>

        <!-- Customize your theme here. -->

        <item name="toolbarStyle">@style/Style.Phum.Toolbar</item>
        <item name="materialButtonStyle">@style/Style.Phum.Button</item>
        <item name="fontFamily">@font/battambang_regular</item>
        <item name="materialCardViewStyle">@style/Style.Phum.CardView</item>
        <item name="android:letterSpacing">0</item>

    </style>

    <style name="Style.Phum.CardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="Style.Phum.Toolbar" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="Style.Phum.TitleTextView" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Style.Phum.SecondTextView" parent="@style/Widget.MaterialComponents.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Style.Phum.Button" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/white</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="Style.Phum.BackButton" parent="">
        <item name="android:layout_height">22dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:src">@drawable/ic_back</item>
        <item name="contentDescription">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/actionBarItemBackground</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">@dimen/item_margin</item>
    </style>

</resources>